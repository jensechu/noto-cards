<% content_for :header do %>

<% @decks_list.each do |deck, cards| %>
<div id="deckSelector">
  <input type='checkbox' name='deck' value="<%= deck.name %>" /><%= deck.name %>
</div>

<% end %>
<div class="next-card">
  &hearts;
</div>
<% end %>

<% content_for :content do %>
<% @decks_list.each_with_index do |(deck, cards), i| %>
<% cards.each_with_index do |card, z| %>
<div class="card" data-deck="<%= deck.name %>">
  
  <div class='front'>
    <%= card.front %>
  </div>
  
  <div class='back is-hidden'>
    <%= card.back %>
  </div>
  
</div>
<% end %>
<% end %>  
<% end %>  
